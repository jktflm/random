@model IEnumerable<InvestigationClearance.Models.ClearanceViewModel>

@{
    ViewData["Title"] = "Update";
}

<h1>Update Page</h1>

<div class="table-responsive">
    <div class="col-md-6">
        <form action="@Url.Action("ListEdit", "Clearance")" method="post">
            <div class="input-group">
                <input type="text" class="form-control" name="searchTerm" placeholder="Search by name">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>

                    Branch Name
                </th>
                <th>
                    Date
                </th>
                <th>
                    Valid ID Presented
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Applicant's Photo
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Civil Status
                </th>
                <th>
                    Highest Educational Attainment
                </th>
                <th>
                    Landline Number
                </th>
                <th>
                    Mobile Number
                </th>
                <th>
                    Email
                </th>
                <th>
                    Complexion
                </th>
                <th>
                    Marks
                </th>
                <th>
                    Religion
                </th>
                <th>
                    Height
                </th>
                <th>
                    Weight
                </th>
                <th>
                    Name of Husband or Wife for Married Applicants
                </th>
                <th>
                    Name of Father
                </th>
                <th>
                    Place of Birth
                </th>
                <th>
                    Name of Mother
                </th>
                <th>
                    Place of Birth
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPresented)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.pictureUrl))
                        {
                            <img src="@item.pictureUrl" alt="Applicant's Photo" style="max-width: 100%; height: auto;">
                        }
                        else
                        {
                            <span>No Photo Available</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CivilStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EducationalAttainment)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LandlineNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Complexion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Religion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpouseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FatherPlaceOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MotherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MotherPlaceOfBirth)
                    </td>
                    <td>
                        <form asp-action="Edit" asp-route-id="@item.Id" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="BranchName" value="@item.BranchName" />
                            <input type="hidden" name="Date" value="@item.Date" />
                            <input type="hidden" name="IdPresented" value="@item.IdPresented" />
                            <input type="hidden" name="LastName" value="@item.LastName" />
                            <input type="hidden" name="FirstName" value="@item.FirstName" />
                            <input type="hidden" name="MiddleName" value="@item.MiddleName" />
                            <input type="hidden" name="DateOfBirth" value="@item.DateOfBirth" />
                            <input type="hidden" name="Gender" value="@item.Gender" />
                            <input type="hidden" name="CivilStatus" value="@item.CivilStatus" />
                            <input type="hidden" name="EducationalAttainment" value="@item.EducationalAttainment" />
                            <input type="hidden" name="LandlineNumber" value="@item.LandlineNumber" />
                            <input type="hidden" name="MobileNumber" value="@item.MobileNumber" />
                            <input type="hidden" name="Email" value="@item.Email" />
                            <input type="hidden" name="Complexion" value="@item.Complexion" />
                            <input type="hidden" name="Marks" value="@item.Marks" />
                            <input type="hidden" name="Religion" value="@item.Religion" />
                            <input type="hidden" name="Height" value="@item.Height" />
                            <input type="hidden" name="Weight" value="@item.Weight" />
                            <input type="hidden" name="SpouseName" value="@item.SpouseName" />
                            <input type="hidden" name="FatherName" value="@item.FatherName" />
                            <input type="hidden" name="FatherPlaceOfBirth" value="@item.FatherPlaceOfBirth" />
                            <input type="hidden" name="MotherName" value="@item.MotherName" />
                            <input type="hidden" name="MotherPlaceOfBirth" value="@item.MotherPlaceOfBirth" />
                            <input type="hidden" name="pictureUrl" value="@item.pictureUrl" />
                            <button type="submit">Edit</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
