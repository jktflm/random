            new SelectListItem { Value = "Bulacan", Text = "Bulacan" },
            new SelectListItem { Value = "Makati", Text = "Makati" },
            new SelectListItem { Value = "Manila", Text = "Manila" },
            new SelectListItem { Value = "Taguig", Text = "Taguig" },
